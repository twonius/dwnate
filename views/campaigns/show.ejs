<% include ../partials/header %>
<section style="padding-bottom: 0">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <!-- <h2><%=campaign.state%> deserves a better <%=campaign.party%> than <%=campaign.name%></h2> -->
        <p><%= campaign.description %></p>
      </div>
    </div>
  </div>
</section>
<section style="padding-top: 0">
  <div class="campaign" >
    <div class="row">
      <div class="col-md-6 profile">
        <img class="img-responsive" src="<%= campaign.image %>">
        <h1>Support a primary challenger against <%=campaign.name%></h1>
        <br>
      </div>
        <div class="col-md-6 profile">
        <div class="container text-center">
          <h1 style="color:#199EB8">Total Raised</h1>
          <!--<h1><span class="badge badge-secondary">$<%=campaign.primary %></span></h1>-->
          <h2>$<%=campaign.primary%></h2>
          <div class="center">
            <a href="/placeholder" class="btn btn-outline-danger btn-lg">DWNATE</a>
          </div>
          <h3 class="text-secondary">Info</h3>
          <br>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><span class="text-secondary">Party</span> <%= campaign.party %> </li>
            <li class="list-group-item"><span class="text-secondary">Chamber</span> <%= campaign.chamber %> </li>
            <li class="list-group-item"><span class="text-secondary">State</span> <%= campaign.state %></li>
            <li class="list-group-item"><span class="text-secondary">Tenure</span> <%= campaign.tenure %> </li>
          </ul>
        </div>
      </div>
    </div>
    </div>
</section>
<section class="explainer" id="explainer">
  <div class="container">
    <h2 style="color:Black">Donating to a primary challenger can be  <a href="http://fieldexperiments-papers2.s3.amazonaws.com/papers/00246.pdf">10 times</a> more effective than donating to an incumbent, <a href="https://www.nytimes.com/2014/10/08/upshot/a-campaign-dollars-power-is-more-valuable-to-a-challenger.html">who have to spend much more for each marginal vote</a>, and most of whom <a href="https://www.cookpolitical.com/ratings/house-race-ratings">don't face a serious general election challenge</a>, making the primary their only real risk of losing office. We're building a platform to help you express your dissatisfaction in a way they'll be sure to hear.</h2>
    <img style="height: 100%" class="img-responsive" src="/img/mockup.jpg">
    <div id="explainer">
      <div class = "row">
        <div class="col-md-3">
          <h2><i class ="fa fa-money"></i></h2>
          <h3>Donate</h3>
          <p>Have a real impact by pledging to donate to a primary race</p>
        </div>
        <div class="col-md-3">
          <h2><i class ="fa fa-share"></i></h2>
          <h3>Share</h3>
          <p>Amplify your donation by sharing it. Your total amount is bundled with additional pledges made using your personal sharing link</p>
        </div>
        <div class="col-md-3">
          <h2><i class ="fa fa-line-chart"></i></h2>
          <h3>Track</h3>
          <p>See how yours and others donations add up over time. Rome wasn't sacked in a day</p>
        </div>
        <div class ="col-md-3">
          <h2><i class ="fa fa-calendar"></i></h2>
          <h3>Allocate</h3>
          <p>You retain full control over which candidate to send your donation to</p>
        </div>
      </div>
    </div>
  </div>
  <hr />
</section>

<section style="padding-top: 0">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h4>Dwnations</h4>
        <div class="well">
          <hr>
          <% campaign.comments.forEach(function(comment){ %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
              <div>
                <%= comment.text %> : -$<%= comment.amount %>
                <hr>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

  </div>
</section>

<script src="https://js.stripe.com/v3/"></script>
<script src="/scripts/payments.js"></script>
<script src="/scripts/store.js"></script>
<% include ../partials/footer %>
